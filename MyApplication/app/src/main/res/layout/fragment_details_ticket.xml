<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetailsTicketFragment">

    <ImageView
        android:id="@+id/image_details_ticket"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
    </ImageView>

    <TextView
        android:id="@+id/tv_title_details_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_details_ticket"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/margin"
        android:layout_margin="@dimen/margin"
        tools:text="Bunaaaaa"
        android:textSize="30dp"
        android:textStyle="bold">

    </TextView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constrant_layout_details_ticket"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title_details_ticket"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/margin"
        android:padding="@dimen/margin"
        android:clickable="true">

        <TextView
            android:id="@+id/tv_date_up_details_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/tv_date_down_details_ticket"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            tools:text="23 martie"
            android:textStyle="bold"
            android:textAllCaps="true">

        </TextView>
        <TextView
            android:id="@+id/tv_date_down_details_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_date_up_details_ticket"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            tools:text="19:00">

        </TextView>

        <TextView
            android:id="@+id/tv_title_ticket_details_ticket_from_ticket"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/image_status_details_ticket"
            app:layout_constraintLeft_toRightOf="@+id/tv_date_up_details_ticket"
            tools:text="MARE MINUNE A CEVA"
            android:textSize="20dp"
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:maxLines="2"
            >

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_ticket_details_ticket_from_ticket"
            app:layout_constraintLeft_toRightOf="@+id/tv_date_up_details_ticket"
            app:layout_constraintRight_toLeftOf="@+id/image_status_details_ticket"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="15dp"
            tools:text="SalaPalatului, Bucuresti"
            >

        </TextView>

        <ImageView
            android:id="@+id/image_status_details_ticket"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            android:background="@drawable/card_round"
            android:src="@drawable/baseline_navigate_next_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/detail_only"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/constrant_layout_details_ticket"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/margin"
        android:layout_margin="@dimen/margin"
        android:text="Detalii eveniment"
        android:textSize="25dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/tv_text_details_ticket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/detail_only"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/margin"
        android:layout_margin="@dimen/margin"
        tools:text="Detalii eveniment"
        android:textSize="20dp"
        android:maxLines="100"
        android:lines="100">
    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>